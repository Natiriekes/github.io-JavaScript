    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <script>
        function alternarModo() {
            document.body.classList.toggle("dark-mode");
        }

        function confete() {
            confetti({
                particleCount: 200,
                spread: 100,
                origin: { y: 0.6 }
            });
        }

        function soltarFogosNasCelulas() {
            const celulas = document.querySelectorAll('.destaque');
            celulas.forEach(celula => {
                setTimeout(() => {
                    const rect = celula.getBoundingClientRect();
                    for (let i = 0; i < 5; i++) {
                        const fogo = document.createElement('div');
                        fogo.className = 'fogo';
                        fogo.style.left = rect.left + window.scrollX + 30 + (Math.random() * 20 - 10) + 'px';
                        fogo.style.top = rect.top + window.scrollY + 10 + 'px';
                        document.body.appendChild(fogo);
                        setTimeout(() => fogo.remove(), 1000);
                    }
                }, Math.random() * 3000 + 500); // espalha entre 0.5s a 3.5s
            });
        }

        window.onload = () => {
            soltarFogosNasCelulas();
        };
    </script>

